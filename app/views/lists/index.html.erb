<% if flash[:error] -%>
    <p class='error'><%=h flash[:error] %></p>
<% end -%>
<% if flash[:notice] -%>
    <p class='notice'><%=h flash[:notice] %></p>
<% end -%>

<div class="hero-unit">
<h1>My TODO Lists</h1>
  <p>This is were I track the stouff I need to get donz :)</p>
  <p><%= link_to "Add a new list!", new_list_url, :class => "brn tbn-primary btn-large" %></p>
</div>

<table class="table table-striped">
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Tasks under this list</th>
    <th>Actions</th>
  </thead>
  <tbody>
  <% @lists.each do |list| %>
  <tr>
    <td><h2><%= link_to "#{list.name}", list_url(list) %></h2></td>
    <td><%= list.description %></td>
    <td><ul><% list.tasks.each do |task| %>
        <li><%= task.description %></li>
    <% end %></ul></td>
    <td><%= link_to "Edit", edit_list_url(list) %>
      | <%= link_to "Delete", list_url(list), :method => :delete %></td>
  </tr>
  <% end %>
  </tbody>
</table>



<hr />

<%= link_to "Add new list", new_list_url %>


